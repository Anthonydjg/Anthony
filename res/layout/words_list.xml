<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<ListView android:id="@+id/words_list" android:background="@android:color/white"
		android:fadingEdge="none" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:textFilterEnabled="true"
		android:divider="@color/lightgray" android:dividerHeight="1.0dip"
		android:layout_weight="1.0" android:fastScrollEnabled="true"
		android:groupIndicator="@null" 
		android:transcriptMode="disabled"
		android:cacheColorHint="#00000000" />
		
	<LinearLayout android:orientation="horizontal"
		android:background="@color/gray" android:paddingTop="5.0dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:textSize="14.0dip" android:id="@+id/btn_sort"
			android:layout_width="0.0dip" android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:text="@string/sort_mode_importance"  />
		<Button android:textSize="14.0dip" android:id="@+id/btn_play"
			android:layout_width="0.0dip" android:layout_height="wrap_content"
			android:text="@string/txt_grouping_remember" android:layout_weight="1.0" />
		<Button android:textSize="14.0dip" android:id="@+id/btn_display"
			android:layout_width="0.0dip" android:layout_height="wrap_content"
			android:layout_weight="1.0" 
			android:text="@string/display_word" />
	</LinearLayout>
</LinearLayout>